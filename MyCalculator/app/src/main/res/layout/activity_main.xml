<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:weightSum="10"
tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvsec"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#4444"
        android:gravity="bottom"
        android:maxLines="1"
        android:padding="10dp"
        android:text=""
        android:textAlignment="viewEnd"
        android:textColor="#000"
        android:textSize="30sp">

    </TextView>

    <TextView
        android:id="@+id/tvmain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#4444"
        android:gravity="bottom"
        android:maxLines="1"
        android:padding="10dp"
        android:text=""
        android:textAlignment="viewEnd"
        android:textColor="#000"
        android:textSize="35sp">

    </TextView>
<LinearLayout
    android:layout_weight="7"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="0dp">
    <LinearLayout
        android:orientation="vertical"
        android:weightSum="6"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="4"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/bsin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#150000"
                    android:text="sin"
                    android:textAllCaps="false"
                    android:textColor="#E30202"
                    android:textSize="30sp"
                    app:backgroundTint="#FFFFFF"
                    app:iconTint="#0E0E0E">

                </Button>

                <Button
                    android:id="@+id/bcos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:text="cos"
                    android:textAllCaps="false"
                    android:textColor="#E30202"
                    android:textSize="30sp"
                    app:backgroundTint="#FFFFFF"
                    app:iconTint="@color/white">

                </Button>

                <Button
                    android:id="@+id/btan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#000"
                    android:text="tan"
                    android:textAllCaps="false"
                    android:textColor="#E30202"
                    android:textSize="30sp"
                    app:backgroundTint="#FFFFFF"
                    app:iconTint="#FFFFFF"
                    app:rippleColor="#FFFDFD">

                </Button>

                <Button
                    android:id="@+id/bc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#000"
                    android:text="C"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    app:backgroundTint="#E30202">

                </Button>


            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="4"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <Button
                    android:id="@+id/binv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#000"
                    android:text="1/x"
                    android:textAllCaps="false"
                    android:textColor="#E30202"
                    android:textSize="30sp"
                    app:backgroundTint="#FFFFFF">

                </Button>

                <Button
                    android:id="@+id/bb1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#000"
                    android:text="("
                    android:textColor="#E30202"
                    android:textSize="30sp"
                    app:backgroundTint="#FFFFFF">

                </Button>

                <Button
                    android:id="@+id/bb2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#000"
                    android:text=")"
                    android:textColor="#E30202"
                    android:textSize="30sp"
                    app:backgroundTint="#FFFFFF">

                </Button>

                <Button
                    android:id="@+id/bdiv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#000"
                    android:text="÷"
                    android:textColor="#000"
                    android:textSize="30sp"
                    app:backgroundTint="#ECC0C0">

                </Button>

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="4"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/b7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#000"
                    android:text="7"
                    android:textColor="#E30202"
                    android:textSize="30sp"
                    app:backgroundTint="#FFFFFF">

                </Button>

                <Button
                    android:id="@+id/b8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#000"
                    android:text="8"
                    android:textColor="#E30202"
                    android:textSize="30sp"
                    app:backgroundTint="#FFFFFF">

                </Button>

                <Button
                    android:id="@+id/b9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#000"
                    android:text="9"
                    android:textColor="#E30202"
                    android:textSize="30sp"
                    app:backgroundTint="#FFFFFF">

                </Button>

                <Button
                    android:id="@+id/bmul"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#000"
                    android:text="×"
                    android:textColor="#000"
                    android:textSize="30sp"
                    app:backgroundTint="#ECC0C0">

                </Button>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="4"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/b4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#000"
                    android:text="4"
                    android:textColor="#E30202"
                    android:textSize="30sp"
                    app:backgroundTint="#FFFFFF">

                </Button>

                <Button
                    android:id="@+id/b5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#000"
                    android:text="5"
                    android:textColor="#E30202"
                    android:textSize="30sp"
                    app:backgroundTint="#FFFFFF">

                </Button>

                <Button
                    android:id="@+id/b6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#000"
                    android:text="6"
                    android:textColor="#E30202"
                    android:textSize="30sp"
                    app:backgroundTint="#FFFFFF">

                </Button>

                <Button
                    android:id="@+id/bmin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#000"
                    android:text="-"
                    android:textColor="#000"
                    android:textSize="30sp"
                    app:backgroundTint="#ECC0C0">

                </Button>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="4"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/b1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#000"
                    android:text="1"
                    android:textColor="#E30202"
                    android:textSize="30sp"
                    app:backgroundTint="#FFFFFF">

                </Button>

                <Button
                    android:id="@+id/b2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#000"
                    android:text="2"
                    android:textColor="#E30202"
                    android:textSize="30sp"
                    app:backgroundTint="#FFFFFF">

                </Button>

                <Button
                    android:id="@+id/b3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#000"
                    android:text="3"
                    android:textColor="#E30202"
                    android:textSize="30sp"
                    app:backgroundTint="#FFFFFF">

                </Button>

                <Button
                    android:id="@+id/bplus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#000"
                    android:text="+"
                    android:textColor="#000000"
                    android:textSize="30sp"
                    app:backgroundTint="#ECC0C0"
                    app:strokeColor="#FFFFFF">

                </Button>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="4"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/bdot"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#000"
                    android:text="."
                    android:textColor="#E30202"
                    android:textSize="30sp"
                    app:backgroundTint="#FFFFFF">

                </Button>

                <Button
                    android:id="@+id/b0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#000"
                    android:text="0"
                    android:textColor="#E30202"
                    android:textSize="30sp"
                    app:backgroundTint="#FFFFFF">

                </Button>

                <Button
                    android:id="@+id/bpi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#000"
                    android:text="π"
                    android:textColor="#E30202"
                    android:textSize="30sp"
                    app:backgroundTint="#FFFFFF">

                </Button>

                <Button
                    android:id="@+id/bequal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#000"
                    android:text="="
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    app:backgroundTint="#E30202">

                </Button>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

</LinearLayout>